<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        tools:context=".MapsActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Vnesi naslov obvestila..."
            android:textSize="20dp"
            android:id="@+id/Naslov" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:hint="Vnesi radij v metrih"
            android:textSize="18dp"
            android:id="@+id/Text_radij"/>

        <Button
            android:id="@+id/Button_Geofence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_edge"
            android:text="PrikaÅ¾i Geofence" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/shrani"
        android:background="@drawable/round_edge"
        android:text="@string/shrani"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:onClick="shrani"
        android:layout_gravity="center" />
</LinearLayout>